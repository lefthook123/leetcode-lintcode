public void shuffle()//{
  int size=this.cards.size();
  for(int i=0;i<size;++i){
    Random rn = new Random();
    int answer = rn.nextInt(size-i)+i;//rn.nextInt(size)返回的值是0-(size-1)
    Card tmp=cards.get(i);
    cards.set(i,cards.get(answer));
    cards.set(answer,tmp);
  }
}
public void play(){
  
}

